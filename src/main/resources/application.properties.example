spring.application.name = foroAlm

# Conexion a Base de Datos
spring.datasource.url = jdbc:mysql://localhost:3306/forohub
spring.datasource.driver-class-name = com.mysql.cj.jdbc.Driver
spring.datasource.username = aqui el nombre de tu usuario de Db
spring.datasource.password = aqui tu contrasena de DB

# JPA / Hibernate
spring.jpa.show-sql = true
spring.jpa.properties.hibernate.format_sql = true
# Importante: 'none' o 'validate' para que Flyway sea el dueno de la estructura
spring.jpa.hibernate.ddl-auto = validate

# Flyway (Necesario porque esta en tu POM)
spring.flyway.enabled = true
spring.flyway.baseline-on-migrate = true

# Seguridad y Errores
spring.devtools.add-properties=false
server.error.include-stacktrace=never
server.error.include-message=always
api.security.token.secret=${JWT_SECRET:aqui tu token secreto, ejemplo: 012345678}

